<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Civ2k17NewGame" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yellow</item>
        <item name="colorPrimaryVariant">@color/red</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_blue</item>
        <item name="colorSecondaryVariant">@color/blue</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <!-- Font Family. -->
        <item name="android:fontFamily">@font/goldman</item>
        <!-- Buttons. -->
        <item name="colorButtonNormal">@color/yellow</item>
        <item name="colorControlHighlight">@color/light_blue</item>
        <item name="colorControlActivated">@color/blue</item>
        <item name="colorAccent">@color/yellow</item>
    </style>
</resources>